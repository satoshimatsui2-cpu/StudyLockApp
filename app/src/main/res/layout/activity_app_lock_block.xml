<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/text_block_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ロック中のアプリです"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="?attr/colorOnSurface" />

    <ImageView
        android:id="@+id/icon_blocked_app"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:contentDescription="アプリアイコン"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_block_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="対象アプリ"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/image_george_reaction"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/george_1"
        android:contentDescription="George Reaction" />
    <TextView
        android:id="@+id/text_points_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/block_points_default"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_unlock_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/block_unlock_time_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/block_points_input_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_points_to_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_points_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/block_clear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_points_plus_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/block_plus_10" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_points_plus_100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/block_plus_100" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_unlock_with_points"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ポイントで解放" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_back_to_learning"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学習へ戻る" />

</LinearLayout>