<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="12dp">

    <!-- 上端から約5%の位置 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <!-- Grade フィルタ -->
    <Spinner
        android:id="@+id/spinner_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/grade_filter_items"
        app:layout_constraintTop_toTopOf="@id/guideline_top_5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"/>

    <!-- 横スクロール可能な表 -->
    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/spinner_grade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ヘッダー（タップでソート） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/header_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/header_word"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Word"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_japanese"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="日本語"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_grade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grade"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_pos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="POS"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_cat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cat"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_m_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="M-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_m_due"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="M-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_l_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="L-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/header_l_due"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="L-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 本体 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_words"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="6dp" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>