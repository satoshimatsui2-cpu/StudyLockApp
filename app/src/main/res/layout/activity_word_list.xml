<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="12dp">

    <!-- 上端から約5%の位置 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <!-- Grade フィルタ -->
    <Spinner
        android:id="@+id/spinner_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_spinner_custom"
        app:layout_constraintTop_toTopOf="@id/guideline_top_5"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 横スクロール可能な表 -->
    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/spinner_grade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ヘッダー（タップでソート） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:id="@+id/header_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/header_word"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Word"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/header_grade"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Grade"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <!-- M: Meaning (英日) -->
                    <TextView
                        android:id="@+id/header_m_level"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="EJ-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/header_m_due"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="EJ-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <!-- L: Listening -->
                    <TextView
                        android:id="@+id/header_l_level"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Lis-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/header_l_due"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Lis-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <!-- JE: Japanese to English -->
                    <TextView
                        android:id="@+id/header_je_level"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="JE-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/header_je_due"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="JE-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <!-- EE1: En to En (Word->Desc) -->
                    <TextView
                        android:id="@+id/header_ee1_level"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="EE1-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/header_ee1_due"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="EE1-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <!-- EE2: En to En (Desc->Word) -->
                    <TextView
                        android:id="@+id/header_ee2_level"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="EE2-Lv"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/header_ee2_due"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="EE2-Due"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#111827"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 本体 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_words"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="6dp" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>