<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern_tile_repeat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/guideline_top_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ヘッダー -->
                <LinearLayout
                    android:id="@+id/header_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="72dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/title_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/logo_title"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:maxWidth="780dp"
                        android:maxHeight="360dp" />

                    <ImageView
                        android:id="@+id/image_character"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"
                        android:src="@drawable/logo_character"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:maxWidth="660dp"
                        android:maxHeight="420dp" />
                </LinearLayout>

                <!-- ポイントカード（幅80%、デザイン統一） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginHorizontal="8dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="4dp"

                        app:strokeColor="@color/sl_button_stroke"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/text_points_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/points_default"
                                android:textSize="18sp"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                tools:text="保有ポイント: 120" />

                            <TextView
                                android:id="@+id/text_point_stats_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/point_stats_default"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurface"
                                android:paddingTop="6dp"
                                android:gravity="center_horizontal"
                                tools:text="今日: 30 / 前日比: +10" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- 級選択ボタン（他ボタンと同サイズ・同デザイン） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/spinner_grade_top"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginHorizontal="8dp"
                        android:text="@string/hint_select_grade"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/sl_button_bg"
                        app:backgroundTint="@null"
                        android:textColor="@color/sl_button_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_grade_stats_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/grade_stats_default"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center_horizontal" />   <!-- 追加 -->

                <!-- STARTボタン（幅80%） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_to_learning"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="12dp"
                        android:text="@string/action_start"
                        android:textAllCaps="false"
                        android:background="@drawable/sl_button_bg"
                        android:textColor="@color/sl_button_text"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@null"
                        android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_to_list"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10dp"
                        android:text="@string/action_word_list"
                        android:textAllCaps="false"
                        android:background="@drawable/sl_button_bg"
                        android:textColor="@color/sl_button_text"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@null"
                        android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_to_point_history"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10dp"
                        android:text="@string/action_point_history"
                        android:textAllCaps="false"
                        android:background="@drawable/sl_button_bg"
                        android:textColor="@color/sl_button_text"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@null"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!-- 管理設定ボタン（幅80%、非表示推奨） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_admin_settings"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10dp"
                        android:text="@string/action_admin_settings"
                        android:textAllCaps="false"
                        android:background="@drawable/sl_button_bg"
                        android:textColor="@color/sl_button_text"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@null"
                        android:textSize="20sp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageButton
            android:id="@+id/button_admin_settings_top"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@drawable/settings_badge"
            android:contentDescription="@string/action_admin_settings"
            android:padding="0dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_top_8"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>