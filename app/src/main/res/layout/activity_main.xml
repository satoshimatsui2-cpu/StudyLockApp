<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern_tile_repeat"
    android:clipChildren="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="50dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false">

                <!-- ヘッダー -->
                <LinearLayout
                    android:id="@+id/header_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="0dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/title_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/logo_title"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:maxWidth="780dp"
                        android:maxHeight="360dp"
                        android:elevation="20dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:id="@+id/image_character"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="40dp"
                        android:src="@drawable/logo_character"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:maxWidth="660dp"
                        android:maxHeight="420dp" />
                </LinearLayout>

                <!-- ポイントカード（幅80%、デザイン統一） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_to_point_history"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginHorizontal="8dp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:strokeColor="@color/sl_button_stroke"
                        app:strokeWidth="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/arrow_icon"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:id="@+id/text_points_top"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/points_default"
                                    android:textSize="18sp"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal"
                                    tools:text="保有ポイント: 120" />

                                <TextView
                                    android:id="@+id/text_point_stats_top"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/point_stats_default"
                                    android:textSize="12sp"
                                    android:textColor="?attr/colorOnSurface"
                                    android:paddingTop="6dp"
                                    android:gravity="center_horizontal"
                                    tools:text="今日: 30 / 前日比: +10" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/arrow_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                app:tint="?attr/colorOnSurface"
                                android:contentDescription="@string/action_point_history"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- 履歴ボタン横並び（ポイント履歴、学習履歴） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- ポイント履歴・学習履歴をまとめるコンテナ（幅80%＋マージン） -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_to_point_history"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="@string/action_point_history"
                            android:textAllCaps="false"
                            android:background="@drawable/sl_button_bg_navy"
                            android:textColor="@color/sl_button_text"
                            android:paddingVertical="12dp"
                            app:backgroundTint="@null"
                            android:textSize="16sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_to_learning_history"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="@string/action_learning_history"
                            android:textAllCaps="false"
                            android:background="@drawable/sl_button_bg_navy"
                            android:textColor="@color/sl_button_text"
                            android:paddingVertical="12dp"
                            app:backgroundTint="@null"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 級選択ボタン（他ボタンと同サイズ・同デザイン） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/spinner_grade_top"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginHorizontal="8dp"
                        android:text="@string/hint_select_grade"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/sl_button_bg"
                        app:backgroundTint="@null"
                        android:textColor="@color/sl_button_text"
                        app:icon="@drawable/ic_expand_more"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/sl_button_text"
                        app:iconSize="32dp"

                        app:iconPadding="4dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_grade_stats_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/grade_stats_default"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center_horizontal" />

                <!-- STARTボタン（幅80%） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_to_learning"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="8dp"
                        android:text="@string/action_start"
                        android:textAllCaps="false"
                        android:background="@drawable/sl_button_bg"
                        android:textColor="@color/sl_button_text"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@null"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!-- 管理設定ボタン（幅80%、非表示推奨） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_admin_settings"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_marginTop="10dp"
                        android:text="@string/action_admin_settings"
                        android:textAllCaps="false"
                        android:background="@drawable/sl_button_bg"
                        android:textColor="@color/sl_button_text"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@null"
                        android:textSize="20sp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageButton
            android:id="@+id/button_admin_settings_top"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_settings"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_admin_settings"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            app:tint="@color/sl_button_stroke"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>