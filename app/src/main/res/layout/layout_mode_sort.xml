<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Japanese Translation -->
    <TextView
        android:id="@+id/japanese_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="これはペンです。" />

    <!-- Answer Area -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_answers"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_rounded_corners_gray"
        app:alignContent="flex_start"
        app:flexWrap="wrap">

        <!-- Selected chips will be added here dynamically -->
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This"
            tools:ignore="MissingConstraints" />

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="?android:attr/listDivider" />

    <!-- Choices Area -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_choices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:alignContent="flex_start"
        app:flexWrap="wrap">

        <!-- Shuffled word chips will be added here dynamically -->
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pen."
            tools:ignore="MissingConstraints" />
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sort_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="判定"
        android:enabled="false" />

</LinearLayout>