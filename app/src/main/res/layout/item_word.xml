<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <TextView android:id="@+id/col_word"      android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"   android:text="word"    android:textSize="14sp" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_japanese"  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"   android:text="japanese" android:textSize="14sp" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_grade"     android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   android:text="grade"   android:textSize="14sp" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_pos"       android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   android:text="pos"     android:textSize="14sp" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_category"  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   android:text="cat"     android:textSize="14sp" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_m_level"   android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   android:text="M-Lv"    android:textSize="14sp"/>
    <TextView android:id="@+id/col_m_due"     android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.3" android:text="M-Due"   android:textSize="12sp" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_l_level"   android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"   android:text="L-Lv"    android:textSize="14sp"/>
    <TextView android:id="@+id/col_l_due"     android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.3" android:text="L-Due"   android:textSize="12sp" android:ellipsize="end" android:maxLines="1"/>
</LinearLayout>