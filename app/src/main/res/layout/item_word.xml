<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView android:id="@+id/col_word"      android:layout_width="120dp" android:layout_height="wrap_content" android:text="word"    android:textSize="14sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>
    <TextView android:id="@+id/col_grade"     android:layout_width="60dp"  android:layout_height="wrap_content" android:text="grade"   android:textSize="14sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>

    <!-- M: Meaning (英日) -->
    <TextView android:id="@+id/col_m_level"   android:layout_width="50dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="14sp" android:textColor="?attr/colorOnSurface"/>
    <TextView android:id="@+id/col_m_due"     android:layout_width="80dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="12sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>

    <!-- L: Listening -->
    <TextView android:id="@+id/col_l_level"   android:layout_width="50dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="14sp" android:textColor="?attr/colorOnSurface"/>
    <TextView android:id="@+id/col_l_due"     android:layout_width="80dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="12sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>

    <!-- JE: Japanese to English -->
    <TextView android:id="@+id/col_je_level"  android:layout_width="50dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="14sp" android:textColor="?attr/colorOnSurface"/>
    <TextView android:id="@+id/col_je_due"    android:layout_width="80dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="12sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>

    <!-- EE1: En to En (Word->Desc) -->
    <TextView android:id="@+id/col_ee1_level" android:layout_width="50dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="14sp" android:textColor="?attr/colorOnSurface"/>
    <TextView android:id="@+id/col_ee1_due"   android:layout_width="80dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="12sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>

    <!-- EE2: En to En (Desc->Word) -->
    <TextView android:id="@+id/col_ee2_level" android:layout_width="50dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="14sp" android:textColor="?attr/colorOnSurface"/>
    <TextView android:id="@+id/col_ee2_due"   android:layout_width="80dp"  android:layout_height="wrap_content" android:text="-"       android:textSize="12sp" android:textColor="?attr/colorOnSurface" android:ellipsize="end" android:maxLines="1"/>

</LinearLayout>