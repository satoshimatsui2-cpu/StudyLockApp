<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingTop="32dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 上部余白（約32dp ≒ 画面高の5%目安） -->
        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/transparent" />

        <!-- タイトル -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sound_settings_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="6dp" />

        <!-- TTS 音量 -->
        <TextView
            android:id="@+id/text_tts_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:textColor="?attr/colorOnSurface"
            tools:text="発音音量: 100%" />

        <SeekBar
            android:id="@+id/seek_tts_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" />

        <!-- TTS 再生スピード -->
        <TextView
            android:id="@+id/text_tts_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:textColor="?attr/colorOnSurface"
            tools:text="発音スピード: 1.0x" />

        <SeekBar
            android:id="@+id/seek_tts_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" /> <!-- 0..20 => 0.5x..1.5x -->

        <!-- TTS ピッチ -->
        <TextView
            android:id="@+id/text_tts_pitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:textColor="?attr/colorOnSurface"
            tools:text="発音ピッチ（声の高さ）: 1.0" />

        <SeekBar
            android:id="@+id/seek_tts_pitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" /> <!-- 0..20 => 0.5..1.5 -->

        <!-- 正解SE -->
        <TextView
            android:id="@+id/text_se_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:textColor="?attr/colorOnSurface"
            tools:text="正解サウンド音量: 90%" />

        <SeekBar
            android:id="@+id/seek_se_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" />

        <!-- 不正解SE -->
        <TextView
            android:id="@+id/text_se_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:textColor="?attr/colorOnSurface"
            tools:text="不正解サウンド音量: 90%" />

        <SeekBar
            android:id="@+id/seek_se_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" />

        <!-- 広告 音量 -->
        <TextView
            android:id="@+id/text_ad_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:textColor="?attr/colorOnSurface"
            tools:text="広告音量: 20%" />

        <SeekBar
            android:id="@+id/seek_ad_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_toggle_ad_mute"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAllCaps="false"
            tools:text="@string/sound_settings_ad_mute_off" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/sound_settings_save"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>