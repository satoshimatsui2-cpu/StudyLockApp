<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 画面上部 7% のガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <ScrollView
        android:id="@+id/scroll_admin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admin_settings_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:paddingBottom="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/admin_save_and_return"
                android:textAllCaps="false" />

            <!-- 管理者セキュリティ設定 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_admin_lock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_lock_title"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_lock_desc"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:paddingBottom="12dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_enable_long_press"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="タイトル長押しで管理画面を開く"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ONにすると、TOP画面のタイトルを長押しすることで、PIN入力なしでこの画面を開けるようになります。"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:paddingBottom="12dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_app_lock_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_app_lock_required_title"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_app_lock_required_desc"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:paddingBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_change_pin"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_change_pin" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_app_lock_settings"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/admin_select_lock_apps"
                android:textAllCaps="false" />

            <!-- 回答間隔 -->
            <TextView
                android:id="@+id/text_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                tools:text="回答間隔: 1.0 秒"
                android:textColor="?attr/colorOnSurface" />

            <SeekBar
                android:id="@+id/seek_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="95" />

            <!-- 誤答リトライ秒 -->
            <TextView
                android:id="@+id/text_wrong_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                tools:text="誤答リトライ: 60 秒"
                android:textColor="?attr/colorOnSurface" />

            <SeekBar
                android:id="@+id/seek_wrong_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="590" />

            <!-- Lv1リトライ秒 -->
            <TextView
                android:id="@+id/text_level1_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                tools:text="Lv1リトライ: 60 秒"
                android:textColor="?attr/colorOnSurface" />

            <SeekBar
                android:id="@+id/seek_level1_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="590" />

            <!-- 10ポイントあたりの分数 (1〜10) -->
            <TextView
                android:id="@+id/text_unlock_min_per_10pt_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admin_label_unlock_min_per_10pt"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/text_unlock_min_per_10pt_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:text="@string/admin_label_unlock_min_per_10pt_value"
                android:textColor="?attr/colorOnSurface"/>

            <SeekBar
                android:id="@+id/seek_unlock_min_per_10pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9" /> <!-- progress:0..9 → 値:1..10 -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_timezone_setup"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/admin_open_timezone_settings"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>