<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="12dp"
        android:text="@string/admin_save_and_return"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scroll_admin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_5"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="現在の学習グレードを設定する"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:text="目標レベルのひとつ下のレベルの問題を解いた場合は取得ポイントは半分、それより下のレベルは四分の一になります。"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurface"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <Spinner
                    android:id="@+id/spinner_current_learning_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:padding="4dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- 他のアプリをロックする（アコーディオン） -->
            <!-- 他のアプリをロックする（アコーディオン） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:id="@+id/header_app_lock_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorSurfaceVariant"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <!-- 先頭アイコン：ボタンと同じ鍵アイコン -->
                        <ImageView
                            android:id="@+id/icon_app_lock_block"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_lock_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="他のアプリをロックする"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_app_lock_block"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:id="@+id/content_app_lock_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:text="ロックするアプリの選択と、選択したアプリのロックと、稼いだポイントでロックの解除の機能が使用できます。"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurface"/>
                        <!-- アプリロック機能を必須にする -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_app_lock_required"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_app_lock_required_title"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/text_app_lock_required_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/admin_app_lock_required_desc"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurface"
                            android:paddingBottom="12dp" />
                        <!-- 「ロックするアプリを選択する」ボタン -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_app_lock_settings"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="@string/admin_select_lock_apps"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            app:icon="@drawable/ic_lock_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="?attr/colorOnSecondaryContainer" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- ペアリング（アコーディオン） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:id="@+id/header_pairing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorSurfaceVariant"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <!-- 追加：先頭アイコン -->
                        <ImageView
                            android:id="@+id/icon_pairing"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_link_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="子供の端末と接続する"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_pairing"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:id="@+id/content_pairing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:text="ペアリング設定すると、①子供端末の管理画面パスワードを忘れた場合に解除出来る。②子供がアクセシビリティのON,OFFをした際にアラートを通知できる。③子供の日々の学習結果を通知出来る。"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_show_qr"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="【子端末】ペアリング用QR表示"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:icon="@drawable/ic_qr_code_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="?attr/colorOnSecondaryContainer"
                            android:textColor="?attr/colorOnSecondaryContainer" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_scan_parent_qr"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="【親端末】子供のQRを読み取る"

                            android:gravity="center"
                            android:textAlignment="center"

                            app:icon="@drawable/ic_camera_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="?attr/colorOnSecondaryContainer"
                            android:textColor="?attr/colorOnSecondaryContainer" />

                        <TextView
                            android:id="@+id/text_connected_manager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="管理者: 未接続"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_managed_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="管理対象: なし"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- セキュリティ（アコーディオン） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- 追加：先頭アイコン -->
                        <ImageView
                            android:id="@+id/icon_security"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_security_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="セキュリティ設定 (親御様用)"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_security"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <!-- Switchには“左アイコン”が付けられないので、必要なら後で行ごとに置き換え（提案は下に書くね） -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_admin_lock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_lock_title"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_lock_desc"
                            android:textSize="12sp"
                            android:paddingBottom="12dp"
                            android:textColor="?attr/colorOnSurface"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_change_pin"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:text="@string/admin_change_pin"
                                app:icon="@drawable/ic_lock_24"
                                app:iconGravity="textStart"
                                app:iconPadding="6dp"
                                app:iconTint="?attr/colorOnSurface" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_setup_authenticator"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="2段階認証"
                                app:icon="@drawable/ic_security_24"
                                app:iconGravity="textStart"
                                app:iconPadding="6dp"
                                app:iconTint="?attr/colorOnSurface" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_accessibility_lock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_accessibility_lock_title"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_accessibility_lock_desc"
                            android:textSize="12sp"
                            android:paddingBottom="12dp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_uninstall_lock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="アプリ削除画面へのアクセス禁止"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="１．アプリの長押し機能の無効化（一時停止、アンインストール）２．「アプリ」画面へのアクセスロック。　３．「セキュリティとプライバシー」画面へのアクセスロック"
                            android:textSize="12sp"
                            android:paddingBottom="12dp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_tethering_lock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_tethering_lock_title"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_tethering_lock_desc"
                            android:textSize="12sp"
                            android:paddingBottom="12dp"
                            android:textColor="?attr/colorOnSurface"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/colorOutlineVariant"
                            android:layout_marginVertical="8dp"/>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_enable_long_press"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="タイトル長押しで管理画面"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ONにすると、TOP画面のタイトルを長押しでPIN入力なしでこの画面を開けます。"
                            android:textSize="12sp"
                            android:paddingBottom="16dp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 学習ポイント -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_study_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/icon_study_points"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_school_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="学習モード 獲得ポイント"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_study_points"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_study_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <!-- ここは将来的に「テキスト+SeekBar」を行コンポーネントにすると、左アイコン付けやすいよ（下に提案） -->
                        <TextView
                            android:id="@+id/text_point_meaning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="意味: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_meaning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_listening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="リスニング: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_listening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_listening_jp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="日本語リスニング: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_listening_jp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_ja_to_en"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="日英: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_ja_to_en"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_en_en_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="英英1: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_en_en_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_en_en_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="英英2: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_en_en_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- テストポイント -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_test_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/icon_test_points"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_quiz_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="テストモード 獲得ポイント"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_test_points"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_test_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_point_test_fill_blank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="穴埋め: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_test_fill_blank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_test_sort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="並び替え: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_test_sort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_test_listen_q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="リスニング質問: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_test_listen_q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/text_point_test_listen_q2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="会話文リスニング: 10 pt" />
                        <SeekBar
                            android:id="@+id/seek_point_test_listen_q2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 時間制限 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_time_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/icon_time_settings"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_timer_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="時間制限と交換レート"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrow_time_settings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content_time_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/text_unlock_min_per_10pt_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_label_unlock_min_per_10pt"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:id="@+id/text_unlock_min_per_10pt_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:text="@string/admin_label_unlock_min_per_10pt_value"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seek_unlock_min_per_10pt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="9"
                            android:layout_marginBottom="16dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?attr/colorOutlineVariant"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/text_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="回答間隔: 1.0 秒" />
                        <SeekBar
                            android:id="@+id/seek_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="19" />

                        <TextView
                            android:id="@+id/text_wrong_retry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="当日再出題（不正解）: 120 秒" />
                        <SeekBar
                            android:id="@+id/seek_wrong_retry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="118" />

                        <TextView
                            android:id="@+id/text_level1_retry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="当日再出題（正解済）: 120 秒" />
                        <SeekBar
                            android:id="@+id/seek_level1_retry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="118" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_open_timezone_setup"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/admin_open_timezone_settings"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_timer_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="?attr/colorOnSurface" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>