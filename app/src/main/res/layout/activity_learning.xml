<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern_tile_repeat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/outline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/text_current_grade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/text_total_words"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text=""
                                android:textSize="13sp"
                                android:textColor="#6B7280"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        app:cardUseCompatPadding="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/outline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/text_points"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="保有ポイント: 0"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/text_point_stats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="今日: 0 / 前日比: +0"
                                android:textSize="13sp"
                                android:textColor="#6B7280"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学習モードを選択 (復習数)"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginBottom="4dp"/>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_mode_meaning"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mode_meaning"
                                android:checked="true"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_mode_listening"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mode_listening"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_mode_ja_to_en"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mode_japanese_to_english"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_mode_en_en_1"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mode_english_english_1"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_mode_en_en_2"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mode_english_english_2"/>
                        </com.google.android.material.chip.ChipGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkbox_include_other_grades"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_include_other_grades"
                                android:textColor="?attr/colorOnSurface"/>
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkbox_auto_play_audio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="@string/label_auto_play_audio"
                                android:checked="true"
                                android:visibility="gone"
                                android:textColor="?attr/colorOnSurface"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_question_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="問題文が入ります"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/text_question_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="WORD HERE"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textAlignment="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>

                        <TextView
                            android:id="@+id/text_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_choice_1"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:minHeight="88dp"
                            android:maxLines="2"
                            android:gravity="center"
                            android:elevation="4dp"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="#0D47A1"
                            app:strokeWidth="3dp"
                            android:textColor="#111827"
                            android:text="Choice"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_choice_2"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:minHeight="88dp"
                            android:maxLines="2"
                            android:gravity="center"
                            android:elevation="4dp"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="#0D47A1"
                            app:strokeWidth="3dp"
                            android:textColor="#111827"
                            android:text="Choice"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_choice_3"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:minHeight="88dp"
                            android:maxLines="2"
                            android:gravity="center"
                            android:elevation="4dp"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="#0D47A1"
                            app:strokeWidth="3dp"
                            android:textColor="#111827"
                            android:text="Choice"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_choice_4"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:minHeight="88dp"
                            android:maxLines="2"
                            android:gravity="center"
                            android:elevation="4dp"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="#0D47A1"
                            app:strokeWidth="3dp"
                            android:textColor="#111827"
                            android:text="Choice"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_choice_5"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:minHeight="88dp"
                            android:maxLines="2"
                            android:gravity="center"
                            android:elevation="4dp"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="#0D47A1"
                            app:strokeWidth="3dp"
                            android:textColor="#111827"
                            android:text="Choice"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_choice_6"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:minHeight="88dp"
                            android:maxLines="2"
                            android:gravity="center"
                            android:elevation="4dp"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="#0D47A1"
                            app:strokeWidth="3dp"
                            android:textColor="#111827"
                            android:text="Choice"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageButton
                        android:id="@+id/button_play_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="音声を再生"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play_sound"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/button_sound_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="24dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="サウンド設定"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/setting_sound"
                        app:layout_constraintBottom_toBottomOf="@+id/button_play_audio"
                        app:layout_constraintEnd_toStartOf="@+id/button_play_audio"
                        app:layout_constraintTop_toTopOf="@+id/button_play_audio" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>