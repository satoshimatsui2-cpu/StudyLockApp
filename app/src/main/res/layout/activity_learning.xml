<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="学習"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 上部カード：モード + 統計 + 問題 + 音声 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- モード切替 -->
                    <RadioGroup
                        android:id="@+id/radio_group_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_meaning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意味"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radio_listening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="リスニング"/>
                    </RadioGroup>

                    <!-- 統計（意/聴）：Chip化 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <!-- 意味 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="意"
                                android:textStyle="bold"
                                android:textColor="@color/onSurface"
                                android:paddingEnd="10dp"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_meaning_review"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="復 0" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_meaning_new"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="新 0/0" />
                        </LinearLayout>

                        <!-- リスニング -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="聴"
                                android:textStyle="bold"
                                android:textColor="@color/onSurface"
                                android:paddingEnd="10dp"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_listening_review"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="復 0" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_listening_new"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="新 0/0" />
                        </LinearLayout>

                        <!-- 互換のため残す（コードが参照していた場合の保険） -->
                        <TextView
                            android:id="@+id/text_study_stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text=""/>
                    </LinearLayout>

                    <!-- 問題タイトル -->
                    <TextView
                        android:id="@+id/text_question_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="問題文が入ります"
                        android:textSize="13sp"
                        android:textColor="#6B7280"
                        android:textAlignment="center"/>

                    <!-- 単語/日本語（大きめ） -->
                    <TextView
                        android:id="@+id/text_question_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="WORD HERE"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"/>

                    <!-- フィードバック（互換のため残す。コード側でGONE） -->
                    <TextView
                        android:id="@+id/text_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#111827"
                        android:layout_marginTop="6dp"/>

                    <!-- 音声再生ボタン -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_play_audio"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="音声を再生"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 選択肢カード（2列×3段にして縦を圧縮） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardUseCompatPadding="true"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:columnCount="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_1"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:minHeight="52dp"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_2"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:minHeight="52dp"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_3"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:minHeight="52dp"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_4"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:minHeight="52dp"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_5"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:minHeight="52dp"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_6"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:minHeight="52dp"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        app:layout_columnWeight="1" />

                </androidx.gridlayout.widget.GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ポイントカード -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardUseCompatPadding="true"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ポイント: 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <TextView
                        android:id="@+id/text_point_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="今日: 0 / 前日比: +0"
                        android:textSize="13sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>