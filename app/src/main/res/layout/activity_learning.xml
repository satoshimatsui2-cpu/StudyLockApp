<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern_tile_repeat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/outline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/text_current_grade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        app:cardUseCompatPadding="true"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/outline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/text_points"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_points_format"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:gravity="center"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_mode_selector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_outlined_selector"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:id="@+id/selector_icon_mode"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_flash_cards_24"
                                app:tint="@color/text_link"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="14dp"
                                app:layout_constraintStart_toEndOf="@id/selector_icon_mode"
                                app:layout_constraintEnd_toStartOf="@id/selector_icon_arrow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent">

                                <TextView
                                    android:id="@+id/selector_text_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_mode_meaning"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_link"
                                    android:singleLine="true"
                                    android:ellipsize="end"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_review_24"
                                        app:tint="@color/badge_review"/>
                                    <TextView
                                        android:id="@+id/selector_text_review"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="14sp"
                                        android:textColor="@color/badge_review"
                                        android:textStyle="bold"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="12dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_new"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/white"
                                        android:background="@drawable/bg_new_badge"
                                        android:paddingStart="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingTop="1dp"
                                        android:paddingBottom="1dp"
                                        android:gravity="center"/>
                                    <TextView
                                        android:id="@+id/selector_text_new"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="14sp"
                                        android:textColor="@color/badge_new"
                                        android:textStyle="bold"
                                        android:layout_marginStart="4dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:id="@+id/icon_master_bronze"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_emoji_events_24"
                                        app:tint="#8D6E63"/>
                                    <TextView
                                        android:id="@+id/text_master_bronze"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0%"
                                        android:textSize="12sp"
                                        android:textColor="#8D6E63"
                                        android:textStyle="bold"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"/>

                                    <ImageView
                                        android:id="@+id/icon_master_silver"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_emoji_events_24"
                                        app:tint="#9E9E9E"/>
                                    <TextView
                                        android:id="@+id/text_master_silver"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0%"
                                        android:textSize="12sp"
                                        android:textColor="#9E9E9E"
                                        android:textStyle="bold"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"/>

                                    <ImageView
                                        android:id="@+id/icon_master_gold"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_emoji_events_24"
                                        app:tint="#FFCA28"/>
                                    <TextView
                                        android:id="@+id/text_master_gold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0%"
                                        android:textSize="12sp"
                                        android:textColor="#FFCA28"
                                        android:textStyle="bold"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"/>

                                    <ImageView
                                        android:id="@+id/icon_master_crystal"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_emoji_events_24"
                                        app:tint="#4DD0E1"/>
                                    <TextView
                                        android:id="@+id/text_master_crystal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0%"
                                        android:textSize="12sp"
                                        android:textColor="#4DD0E1"
                                        android:textStyle="bold"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"/>

                                    <ImageView
                                        android:id="@+id/icon_master_purple"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_emoji_events_24"
                                        app:tint="#9C27B0"/>
                                    <TextView
                                        android:id="@+id/text_master_purple"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0%"
                                        android:textSize="12sp"
                                        android:textColor="#9C27B0"
                                        android:textStyle="bold"
                                        android:layout_marginStart="1dp"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/selector_icon_arrow"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_expand_more_24"
                                app:tint="#BDBDBD"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- ✅ チェック列：ここに「選択肢を隠す」を追加 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="0dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkbox_include_other_grades"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="@string/label_include_other_grades"
                                android:textColor="?attr/colorOnSurface"/>

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkbox_hide_choices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:textSize="13sp"
                                android:text="回答隠す"
                                android:textColor="?attr/colorOnSurface"/>

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkbox_auto_play_audio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:textSize="13sp"
                                android:text="@string/label_auto_play_audio"
                                android:checked="true"
                                android:visibility="gone"
                                android:textColor="?attr/colorOnSurface"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_question_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="@string/dummy_question_title"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/text_question_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/dummy_word"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:textAlignment="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/text_script_display"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="14sp"
                                android:textColor="#374151"
                                android:background="#F3F4F6"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/text_feedback"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:id="@+id/layout_action_buttons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_marginTop="16dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_replay_audio"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="8dp"
                                    android:text="@string/action_play_audio"
                                    app:icon="@drawable/ic_headphones_24"
                                    app:iconGravity="textStart"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_next_question"
                                    style="@style/Widget.Material3.Button"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/action_next_question"
                                    app:icon="@drawable/ic_arrow_forward_24"
                                    app:iconGravity="textEnd"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ✅ 選択肢ブロック：ここを FrameLayout 化してカバーを重ねる -->
                <FrameLayout
                    android:id="@+id/choices_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <!-- 既存の6ボタン -->
                    <LinearLayout
                        android:id="@+id/choices_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_choice_1"
                                style="@style/ChoiceButtonStyle"
                                android:text="@string/dummy_choice" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_choice_2"
                                style="@style/ChoiceButtonStyle"
                                android:text="@string/dummy_choice" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_choice_3"
                                style="@style/ChoiceButtonStyle"
                                android:text="@string/dummy_choice" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_choice_4"
                                style="@style/ChoiceButtonStyle"
                                android:text="@string/dummy_choice" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_choice_5"
                                style="@style/ChoiceButtonStyle"
                                android:text="@string/dummy_choice" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_choice_6"
                                style="@style/ChoiceButtonStyle"
                                android:text="@string/dummy_choice" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- ✅ カバー（隠すONのときだけ表示） -->
                    <FrameLayout
                        android:id="@+id/cover_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_cover_navy_rounded"
                        android:padding="14dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingTop="48dp"
                            android:paddingBottom="60dp">

                            <TextView
                                android:id="@+id/text_cover_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="まずは思い出してみよう"
                                android:textSize="14sp"
                                android:textColor="#F1F5F9"
                                android:letterSpacing="0.02"
                                android:paddingBottom="24dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <!-- 見る（選択肢を表示）: 明るいボタンで目立たせる -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_show_choices"
                                    style="@style/Widget.Material3.Button"
                                    android:layout_width="0dp"
                                    android:layout_height="96dp"
                                    android:layout_weight="1"
                                    android:text="回答する"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:paddingStart="18dp"
                                    android:paddingEnd="18dp"
                                    app:cornerRadius="24dp"
                                    android:backgroundTint="#F8FAFC"
                                    android:textColor="#0D1B3D" />

                                <Space
                                    android:layout_width="12dp"
                                    android:layout_height="1dp" />

                                <!-- 分からない: 透明＋白枠で落ち着いたサブに -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_dont_know"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="96dp"
                                    android:layout_weight="1"
                                    android:text="分からない"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:paddingStart="18dp"
                                    android:paddingEnd="18dp"
                                    app:cornerRadius="24dp"
                                    app:strokeWidth="1dp"
                                    app:strokeColor="#E2E8F0"
                                    android:textColor="#F8FAFC" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageButton
                        android:id="@+id/button_play_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/action_play_audio"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play_sound"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/button_sound_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginEnd="24dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="サウンド設定"
                        android:padding="0dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/setting_sound"
                        app:layout_constraintBottom_toBottomOf="@id/button_play_audio"
                        app:layout_constraintEnd_toStartOf="@id/button_play_audio"
                        app:layout_constraintTop_toTopOf="@id/button_play_audio" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- ▼▼▼ ここから追加 ▼▼▼ -->
                <include
                    android:id="@+id/sort_question_layout"
                    layout="@layout/layout_mode_sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="visible" />
                <!-- ▲▲▲ ここまで追加 ▲▲▲ -->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>