<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern_tile_repeat">

    <!-- 画面上部 5% のガイドライン -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_top_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ポイントカード -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/text_points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ポイント: 0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111827"/>

                        <TextView
                            android:id="@+id/text_point_stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="今日: 0 / 前日比: +0"
                            android:textSize="13sp"
                            android:textColor="#6B7280"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 上部カード：モード + 統計 + 問題 + 音声 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- モード切替 -->
                        <RadioGroup
                            android:id="@+id/radio_group_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_meaning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="意味"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/radio_listening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="リスニング"/>
                        </RadioGroup>

                        <!-- 統計（意/聴） -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <!-- 意味 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="意"
                                    android:textStyle="bold"
                                    android:textColor="@color/onSurface"
                                    android:paddingEnd="10dp"/>

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_meaning_review"
                                    style="@style/Widget.Material3.Chip.Assist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="復 0" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_meaning_new"
                                    style="@style/Widget.Material3.Chip.Assist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="新 0/0" />
                            </LinearLayout>

                            <!-- リスニング -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="聴"
                                    android:textStyle="bold"
                                    android:textColor="@color/onSurface"
                                    android:paddingEnd="10dp"/>

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_listening_review"
                                    style="@style/Widget.Material3.Chip.Assist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="復 0" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_listening_new"
                                    style="@style/Widget.Material3.Chip.Assist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="新 0/0" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/text_study_stats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:text=""/>
                        </LinearLayout>

                        <!-- 問題タイトル -->
                        <TextView
                            android:id="@+id/text_question_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="問題文が入ります"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:textAlignment="center"/>

                        <!-- 単語/日本語（大きめ） -->
                        <TextView
                            android:id="@+id/text_question_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="WORD HERE"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>

                        <!-- フィードバック -->
                        <TextView
                            android:id="@+id/text_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:layout_marginTop="6dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_play_audio"
                            style="@style/App.PrimaryButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="音声を再生" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 選択肢カード（2列×3段） -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:columnCount="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_1"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_2"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_3"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_4"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_5"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:layout_columnWeight="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_choice_6"
                        style="@style/App.PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:layout_columnWeight="1" />

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>