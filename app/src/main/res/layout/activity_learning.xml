<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- モード切替 -->
    <RadioGroup
        android:id="@+id/radio_group_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意味"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_listening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="リスニング"/>
    </RadioGroup>


    <!-- 問題タイトル（小さめ・センター） -->
    <TextView
        android:id="@+id/text_question_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="問題文が入ります"
        android:textSize="16sp"
        android:padding="4dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/radio_group_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text_study_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        android:lineSpacingExtra="2dp"
        android:paddingTop="6dp"
        android:text="意[復:0,新:0/0]\n聴[復:0,新:0/0]" />

    <!-- 単語/日本語（大きめ・センター、上下マージンを倍） -->
    <TextView
        android:id="@+id/text_question_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WORD HERE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_question_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 選択肢ボタン（4択） -->
    <Button
        android:id="@+id/button_choice_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:minHeight="60dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/text_question_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_choice_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:minHeight="60dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/button_choice_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_choice_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:minHeight="60dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/button_choice_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_choice_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:minHeight="60dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/button_choice_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_choice_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:minHeight="60dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/button_choice_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button_choice_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:minHeight="60dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/button_choice_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- ポイント表示 -->
    <TextView
        android:id="@+id/text_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ポイント: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button_choice_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"/>
    <!-- 日次ポイント表示（今日 / 前日比） -->
    <TextView
        android:id="@+id/text_point_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日: 0 / 前日比: +0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_points"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="4dp"/>

    <!-- フィードバック表示 -->
    <TextView
        android:id="@+id/text_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_points"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"/>

    <!-- 音声再生ボタン -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_play_audio"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▶︎音声"
        android:textSize="18sp"
        android:minHeight="72dp"
        android:padding="12dp"
        android:backgroundTint="@android:color/white"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/text_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>