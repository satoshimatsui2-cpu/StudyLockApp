<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:name=".StudyLockApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyLockApp"
        >

        <activity
            android:name=".ui.restricted.RestrictedAccessActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.StudyLockApp" />

        <activity
            android:name=".ui.alert.BlockedAlertActivity"
            android:theme="@style/Theme.App.Transparent"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:exported="false" />

        <activity
            android:name=".ui.LearningHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".ui.PointHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".ui.applock.AppLockSettingsActivity"
            android:exported="false"
            android:label="アプリロック設定" />

        <activity
            android:name=".ui.setup.TimeZoneSetupActivity"
            android:exported="false" />

        <activity
            android:name=".AdminSettingsActivity"
            android:hardwareAccelerated="true"
            android:exported="false" />

        <activity
            android:name=".ui.setup.AuthenticatorSetupActivity"
            android:exported="false"
            android:label="@string/totp_setup_title" />

        <activity
            android:name=".LearningActivity"
            android:exported="false" />

        <activity
            android:name=".WordListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.QrCodeActivity"
            android:exported="false" />

        <activity
            android:name=".CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".ui.applock.AppLockBlockActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:theme="@style/Theme.StudyLockApp" />

        <service
            android:name=".service.AppLockAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.StudyLockApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SoundSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.PrivacyPolicyActivity"
            android:exported="false"
            android:label="プライバシーポリシー" />

    </application>
</manifest>