<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ランチャーに出るアプリ一覧を取得するための可視性宣言 -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:name=".StudyLockApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyLockApp"
        >

        <activity
            android:name=".ui.LearningHistoryActivity"
            android:exported="false" />

        <!-- ポイント履歴画面 -->
        <activity
            android:name=".ui.PointHistoryActivity"
            android:exported="false" />

        <!-- アプリロック設定画面 -->
        <activity
            android:name=".ui.applock.AppLockSettingsActivity"
            android:exported="false"
            android:label="アプリロック設定" />

        <!-- タイムゾーン設定 -->
        <activity
            android:name=".ui.setup.TimeZoneSetupActivity"
            android:exported="false" />

        <!-- 管理者設定 -->
        <activity
            android:name=".AdminSettingsActivity"
            android:exported="false" />
            
        <!-- Authenticator設定 -->
        <activity
            android:name=".ui.setup.AuthenticatorSetupActivity"
            android:exported="false"
            android:label="@string/totp_setup_title" />

        <!-- 学習画面 -->
        <activity
            android:name=".LearningActivity"
            android:exported="false" />

        <!-- 単語一覧 -->
        <activity
            android:name=".WordListActivity"
            android:exported="false" />

        <!-- ブロック画面（ロック対象アプリを前面にした時に出す） -->
        <activity
            android:name=".ui.applock.AppLockBlockActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:theme="@style/Theme.StudyLockApp" />

        <service
            android:name=".service.AppLockAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- ランチャー（メイン） -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.StudyLockApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SoundSettingsActivity"
            android:exported="false" />
    </application>
</manifest>